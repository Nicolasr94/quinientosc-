#include <iostream>
using namespace std;

int main() {
	string nombre;
	bool flag =true,flagJuego = true; 
	int resultadosDados[6]=0;
	int ronda = 1;
	int iniciarJuego=5;
	while(flag != false){
	 std::cout << "Seleccione 1 para iniciar juego o 0 para salier" << std::endl; 
	 std::cin >> iniciarJuego;
	 
	 switch(iniciarJuego){
	 case 1:
		 std::cout << "Ingrese nombre de jugador" << std::endl;
		 std::cin >> nombre;
		 while(flagJuego != false){
		 std::cout << "COMIENZA LA PARTIDA PARA " << nombre << std::endl;
		 std::cout << "RONDA NÂº" << ronda << std::endl;
		 std::cout << "PUNTAJE: 400" << nombre << std::endl; 	
		 std::cout << "PRESIONAR UNA TECLA PARA CONTINUAR ... " << std::endl;
		 ronda ++;
		 system("pause");
	 }
	 case 0: flag = false;
	 }
	 	}
	return 0;
}

int leerDados(int *dados[],int &resultados[]){
	for(int i=0; i<6; i++){
		switch(dados[i]){
		case 1: resultados[0]++;
		break;
		case 2: resultados[1]++;
		break;
		case 3: resultados[2]++;
		break;
		case 4: resultados[3]++;
		break;
		case 5: resultados[4]++;
		break;
		case 6: resultados[5]++;
		break;
		}
	}
}
